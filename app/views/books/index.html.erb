<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th class="headers">Title</th>
      <th class="headers">Author</th>
      <th class="headers">Description</th>
      <th class="headers">Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_user.books.each do |book| %>
      <tr class="body">
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.URL %></td>
        <td class="button"><%= link_to 'Show', book %></td>
        <td class="button"><%= link_to 'Edit', edit_book_path(book) %></td>
        <td class="button"><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books %>

<br>

<%= link_to 'New Book', new_book_path %>
